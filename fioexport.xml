<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
  <name>Fio Export</name>
  <creationDate>2015-01-23</creationDate>
  <author>Ondřej Hlaváč</author>
  <authorEmail>info@bluepro.cz</authorEmail>
  <authorUrl>http://bluepro.cz</authorUrl>
  <copyright>Ondřej Hlaváč</copyright>
  <license>GNU/GPL</license>
  <version>1.0.0</version>
  <description>Fio Bank account overview</description>

  <update>
    <schemas>
      <schemapath type="mysql">sql/updates/mysql</schemapath>
    </schemas>
  </update>

  <files folder="site">
    <filename>index.html</filename>
    <filename>fioexport.php</filename>
    <filename>controller.php</filename>
    <folder>helpers</folder>
    <folder>language</folder>
    <folder>models</folder>
    <folder>views</folder>
  </files>

	<media destination="com_fioexport" folder="media">
	  <folder>css</folder>
	</media>

  <administration>
    <menu>Fio Export</menu>
    <files folder="admin">
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <filename>index.html</filename>
      <filename>fioexport.php</filename>
      <filename>controller.php</filename>
    	<folder>language</folder>
      <folder>sql</folder>
      <folder>views</folder>
    </files>
  </administration>

</extension>
